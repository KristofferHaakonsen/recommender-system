ass", "leilighet"]}, {"field": "kw-entity", "value": "infill"}, {"field": "kw-location", "value": ["danmark", "marokko", "london", "oslo", "tyskland"]}, {"field": "kw-pageclass", "value": "article"}, {"field": "kw-person", "value": ["sara helen skog\u00f8y", "bj\u00f8rnar johnsen"]}, {"field": "kw-taxonomy", "value": "bolig"}, {"field": "og-image", "value": "http://vertical.snd.no/images/fb226a7a-2aec-43ae-a556-29589c9db47e?fit=crop&h=551&q=80&w=980"}, {"field": "og-locale", "value": "nb_NO"}, {"field": "og-site-name", "value": "adressa.no"}, {"field": "og-title", "value": "Leiligheten var slitt, upraktisk og oppdelt i mange sm\u00e5 rom"}, {"field": "og-type", "value": "article"}, {"field": "og-url", "value": "http://www.adressa.no/bolig/Leiligheten-var-slitt_-upraktisk-og-oppdelt-i-mange-sma-rom-7862b.html"}, {"field": "pageclass", "value": ["article"]}, {"field": "publishtime", "value": "2015-04-24T18:00:00.000Z"}, {"field": "recs-articleid", "value": "7862"}, {"field": "recs-category-type", "value": "taxonomy"}, {"field": "recs-category0", "value": "taxonomy|bolig"}, {"field": "recs-publishtime", "value": "2015-04-24T18:00:00.000Z"}, {"field": "recs-rawtitle", "value": "Leiligheten var slitt, upraktisk og oppdelt i mange sm\u00e5 rom -adressa.no"}, {"field": "recs-recommending", "value": "true"}, {"field": "siteid", "value": "9222270286501375973"}, {"field": "taxonomy", "value": "bolig"}, {"field": "teaser", "value": "Arkitekt Bj\u00f8rnar Johnsen har skapt et praktisk og personlig hjem i en gammel byg\u00e5rd."}, {"field": "thumbnail", "value": "http://content-thumbnail.cxpublic.com/content/thumbnail200x150/77672ee90d5cdd61b0f66754ad967928f3f1a8ae.jpg?592d8b30"}, {"field": "thumbnailfullheightdimensions", "value": "200x1885"}, {"field": "timestamp", "value": "2017-05-30T15:09:36.000Z"}, {"field": "title", "value": "Leiligheten var slitt, upraktisk og oppdelt i mange sm\u00e5 rom"}, {"field": "url", "value": "http://www.adressa.no/bolig/Leiligheten-var-slitt_-up